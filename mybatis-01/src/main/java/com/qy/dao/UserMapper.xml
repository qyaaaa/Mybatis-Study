<?xml version="1.0" encoding="UTF8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定一个对应的Dao/Mapper接口 -->
<mapper namespace="com.qy.dao.UserMapper2">
    <!-- select查询语句-->
    <select id="getUserLike" resultType="com.qy.pojo.User">
        select * from mybatis.user where `name` like #{value}
    </select>

    <select id="getUserList" resultType="com.qy.pojo.User">
        select * from mybatis.user
    </select>

    <select id="getUserById" parameterType="int" resultType="com.qy.pojo.User">
        select * from mybatis.user where id = #{id}
    </select>

    <select id="getUserById2" parameterType="map" resultType="com.qy.pojo.User">
        select * from mybatis.user where id = #{helloid} and `name` = #{name}
    </select>

    <!--对象中的属性可以直接取出来 -->
    <insert id="addUser" parameterType="com.qy.pojo.User">
        insert into mybatis.user (id,`name`,pwd) values (#{id},#{name},#{pwd});
    </insert>

    <insert id="addUser2" parameterType="map">
        insert into mybatis.user (id,`name`,pwd) values (#{userid},#{password});
    </insert>

    <update id="updateUser" parameterType="com.qy.pojo.User">
        update mybatis.user set `name`=#{name},pwd=#{pwd} where id = #{id};
    </update>

    <delete id="deleteUser" >
        delete from mybatis.user where id = #{id};
    </delete>

</mapper>